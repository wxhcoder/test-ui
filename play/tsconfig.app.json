{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": ["vite/client", "test-ui/global"],
    "baseUrl": ".",
    // "paths": {
    //   "test-ui": ["../packages/test-ui"]
    // },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  // "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "../typing/global.d.ts", "src/main.ts"]
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/main.ts"]
}
